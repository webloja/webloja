{% extends "::webloja.html.twig" %}
{% block javascripts %}
    {{ parent() }}
<script>
    $(function(){
        $("#voltar").click(function(){
            $(window.document.location).attr('href','{{ path('UpdateLojaProntuario',{'id_interno': app.request.get('id_interno') }) }}');
        })
    });
</script>
{% endblock %}
{% block body %}
    <body >
        <div id="dialog" title="Erro"></div>
        <div class='row-fluid'>
            <span class='span3'></span>
            <span class='span6 text-right'>
                <button class='btn btn-danger btn-small' id='voltar'>
                    <i class='icon-arrow-left icon-white'></i>&nbsp;Voltar
                </button>
            </span>
            <span class='span3'></span>
        </div>
        <div class='row-fluid'>
            <span class='span3'></span>
            <div class='well well-small span6'>
                {% for flashMessage in app.session.flashbag.get('notice_erro') %}
                    <div class="flash-notice alert alert-error">
                   {{ flashMessage }}
                        </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('notice_sucesso') %}
                        <div class="flash-notice alert alert-success">
                   {{ flashMessage }}
                            </div>
                {% endfor %}
                   <form class="form-horizontal" id="FormNovaLojaProntuario" action="{{ path('NovaLojaProntuario',{'id_interno': app.request.get('id_interno') }) }}" method="post" {{ form_enctype(formNovaLoja) }}>
                    {{ form_errors(formNovaLoja) }}

                      <div class="control-group">
                             <div class="text-exception text-error">
                                  {{ form_errors(formNovaLoja.prontuario) }}
                             </div>
                            {{ form_label(formNovaLoja.prontuario,'Prontu√°rio',{'label_attr': {'class': 'control-label'}}) }}

                           <div class="controls">
                                {{ form_widget(formNovaLoja.prontuario,{ 'attr': {'class': 'span4'} } ) }}
                           </div>
                      </div>
                      
                      <div class="control-group">
                             <div class="text-exception text-error">
                                  {{ form_errors(formNovaLoja.loja) }}
                             </div>
                                  {{ form_label(formNovaLoja.loja,'Loja Origem',{'label_attr': {'class': 'control-label'}}) }}

                           <div class="controls">
                                {{ form_widget(formNovaLoja.loja,{ 'attr': {'class': 'span4'} } ) }}
                           </div>
                      </div>     
                           
                      <div class="control-group">
                             <div class="text-exception text-error">
                                  {{ form_errors(formNovaLoja.lojaDestino) }}
                             </div>
                                  {{ form_label(formNovaLoja.lojaDestino,'Loja Destino',{'label_attr': {'class': 'control-label'}}) }}

                           <div class="controls">
                                {{ form_widget(formNovaLoja.lojaDestino,{ 'attr': {'class': 'span6'} } ) }}
                           </div>
                      </div>     
                           
                      <div class='text-center'>
                           <button type="submit" class="btn btn-small btn-danger" id='btnNovaLojaProntuario'>Enviar</button>
                      </div>
                    {{ form_rest(formNovaLoja) }}
                      </form>
                   </div>
                   <span class='span3'></span>
                </div>
</body>
{% endblock %}


