{% extends "::webloja.html.twig" %}
{% block javascripts %}
    {{ parent() }}
<script type="text/javascript" src="{{ asset('bundles/admin/js/updateSenhaProntuario.js') }}"></script>
{% endblock %}
{% block body %}
    <body >
        <div id="dialog" title="Erro"></div>
        <div class='row-fluid'>
            <span class='span3'></span>
            <div class='well well-small span6'>
                {% for flashMessage in app.session.flashbag.get('notice_erro') %}
                    <div class="flash-notice alert alert-error">
                   {{ flashMessage }}
                        </div>
                {% endfor %}
                {% for flashMessage in app.session.flashbag.get('notice_sucesso') %}
                        <div class="flash-notice alert alert-success">
                   {{ flashMessage }}
                            </div>
                {% endfor %}
                            <form class="form-horizontal" id="FormUpdateSenhaProntuario" action="{{ path('AdminUpdateSenhaProntuario',{'id_interno': app.request.get('id_interno') }) }}" method="post" {{ form_enctype(form) }}>
                    {{ form_errors(form) }}

                                    <div class="control-group">
                                        <div class="text-exception text-error">
                                        {{ form_errors(form.prontuario) }}
                                        {{ form_errors(form.senha) }}
                                            </div>
                            {{ form_label(form.prontuario,'Prontu√°rio',{'label_attr': {'class': 'control-label'}}) }}

                                            <div class="controls">
                            {{ form_widget(form.prontuario,{ 'attr': {'class': 'span8'} } ) }}
                                                </div>
                                            </div>
                                            <div class="control-group">
                            {{ form_label(form.senha,'Senha Atual',{'label_attr': {'class': 'control-label'}}) }}
                                                    <div class="controls">
                            {{ form_widget(form.senha,{ 'attr': {'class': 'span8'} }) }}
                                                        </div>
                                                    </div>
                                                    <div class="control-group">
                            {{ form_label(form.senhaNova,'Nova Senha',{'label_attr': {'class': 'control-label'}}) }}
                                                            <div class="controls">
                            {{ form_widget(form.senhaNova,{ 'attr': {'class': 'span8'} }) }}
                                                                </div>
                                                            </div>
                                                            <div class="control-group">
                            {{ form_label(form.confirmeSenha,'Confirme a Nova Senha',{'label_attr': {'class': 'control-label'}}) }}
                                                                    <div class="controls">
                            {{ form_widget(form.confirmeSenha,{ 'attr': {'class': 'span8'} }) }}
                                                                        </div>
                                                                    </div>
                                                                    <div class='text-center'>
                                                                        <button type="button" class="btn btn-small btn-danger" id='btnUpdateSenhaProntuario'>Alterar Senha</button>
                                                                    </div>
                    {{ form_rest(form) }}
                                                                </form>
                                                            </div>
                                                            <span class='span3'></span>
                                                        </div>
                                                    </body>
{% endblock %}


