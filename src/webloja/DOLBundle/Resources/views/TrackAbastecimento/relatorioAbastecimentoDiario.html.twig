{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/webloja/css/bootstrap-datetimepicker.min.css') }}">
{% endblock %} 
{% block javascripts %}
    {{ parent() }}
<script type="text/javascript" src="{{ asset('bundles/webloja/js/bootstrap-datetimepicker.min.js') }}"></script>
