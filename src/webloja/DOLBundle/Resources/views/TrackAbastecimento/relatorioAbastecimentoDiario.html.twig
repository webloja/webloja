{% extends "::webloja.html.twig" %} 
{% block stylesheets %} 
{{ parent()}} 
{% endblock %} 
{% block javascripts %} 
{{ parent() }}
<script type="text/javascript" src="{{ asset('bundles/dol/js/relatorioAbastecimentoDiario.js') }}"></script>
{% endblock %} 
{% block body %}
<body>
	<div id="dialog" title="Erro"></div>
	<div class='row-fluid'>
		<span class='span3'></span>
		<div class='well well-small span6'>
			{% for flashMessage in app.session.flashbag.get('notice_erro') %}
			<div class="flash-notice alert alert-error">{{ flashMessage }}</div>
			{% endfor %} {% for flashMessage in
			app.session.flashbag.get('notice_sucesso') %}
			<div class="flash-notice alert alert-success">{{ flashMessage }}</div>
			{% endfor %}
			<form class="form-horizontal" id="FormRelatorioAbastecimetoDiario"
				action="{{ path('TrackAbastecimentoRelatorioDiario',{'id_interno': app.request.get('id_interno') }) }}"
				method="post">

				<div class="control-group">
					<label class='control-label'>Data Dia</label>
					<div class="controls">
						<div id="data_dia" class="input-append date">
							<input id='data_d' name='data_dia' class='span12'
								data-format="dd/MM/yyyy" type="text"></input> <span
								class="add-on" id='i_data'> <i class="icon-calendar"></i>
							</span>
						</div>
					</div>
				</div>

				<div class="control-group">
					<label class='control-label'>Data MÃªs/ano</label>
					<div class="controls">
						<div id="data_mes_ano" class="input-append date">
							<input id='data_mes' name='data_mes' class='span21'
								data-format="MM/yyyy" type="text"></input> <span class="add-on"
								id='ma_data'> <i class="icon-calendar"></i>
							</span>
						</div>
					</div>
				</div>
				
				<div class="control-group">
					<label class='control-label'>Tipo</label>
					<div class="controls">
						<label class="radio">
							<input type="radio" name="optionsRadios" id="carregados" value="0" checked />Carregados
						</label>
						<label class="radio">
							<input type="radio" name="optionsRadios" id="nCarregados" value="1"/>N&atilde;o Carregados
						</label>
					</div>
				</div>

				<div class='text-center'>
					<button type="submit" class="btn btn-small btn-danger" id='btnCarregados'><i class='icon-list-alt icon-white'></i>&nbsp;Listar</button>
				</div>
			</form>
		</div>
		<span class='span3'></span>
	</div>
</body>
{% endblock %}